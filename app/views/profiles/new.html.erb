<!-- Reference: http://guides.rubyonrails.org/form_helpers.html => 2.2 Binding a Form to an Object -->
<!-- Source: "Devise Authentication in Depth" - https://www.sitepoint.com/devise-authentication-in-depth/ -->

<!-- Routes to 'Profiles#new' -->

<h1>Profile Creation - Welcome back <%= current_user.name %>!</h1>
<% provide(:title, 'Sign up') %>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  
  <!-- Reference: http://guides.rubyonrails.org/form_helpers.html => 2.2 Binding a Form to an Object -->
  <!-- Creates a form for the object @profile. -->

      <%= form_for(@profile) do |f| %>
      
        <div class="form-group">
          <%= f.label :full_name %>
          <%= f.text_field :full_name %>
        </div>
          
        <div class="form-group">
          <%= f.label :contact_number %>
          <%= f.text_field :contact_number %>
        </div>
          
        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location %>
        </div>
          
        <div class="form-group">
          <%= f.label :makeup_type %>
          <%= f.text_field :makeup_type %>
        </div>
          
        <div class="form-group">
          <%= f.label :bio %>
          <%= f.text_area :bio %>
        </div>
  
        <%= f.submit "Create my account", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
