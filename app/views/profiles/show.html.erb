<h1>Your Profile - Welcome <%= current_user.name %>!</h1>
<h2><%= @profile.full_name %>!</h2>


  <div class="row">
    <div class="col-md-6 col-md-offset-3">
  
  <!-- Reference: http://guides.rubyonrails.org/form_helpers.html => 2.2 Binding a Form to an Object -->
      <%= form_for @profile, url: {action: "show"} do |f| %>
        
        <div class="form-group">
          <%= f.label :full_name %>
          <%= f.text_field :full_name %>
        </div>
        
        <div class="form-group">
          <%= f.label :contact_number %>
          <%= f.text_field :contact_number %>
        </div>
        
        <div class="form-group">
          <%= f.label :location %>
          <%= f.password_field :location %>
        </div>
        
        <div class="form-group">
          <%= f.label :makeup_type %>
          <%= f.password_field :makeup_type %>
        </div>
        
        <div class="form-group">
          <%= f.label :bio %>
          <%= f.password_field :bio %>
        </div>
      <% end %>
    </div>
  </div>

